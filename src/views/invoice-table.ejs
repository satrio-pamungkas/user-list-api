<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>User Invoice Tabel</title>
</head>
<body>
    <div class="py-9 px-9">
        <h1 class="text-xl text-blue-800 font-bold text-clifford mb-4">
            User Invoice Report
        </h1>
        <table class="min-w-full divide-y divide-gray-200" id="table-schema">
            <thead className="bg-gray-100">
                <tr>
                    <% headerTable.forEach(element => { %>
                        <th class="font-OpenSans font-bold border"><%= element %> </th>
                    <% }) %>
                </tr>
            </thead>
            <tbody>
                <% for( let index = 0; index < data.length; index++ ) { %>
                    <tr>
                        <td class="font-OpenSans font-normal border"><%= data[index].first_name %></td>
                        <td class="font-OpenSans font-normal border"><%= data[index].last_name %></td>
                        <td class="font-OpenSans font-normal border"><%= data[index].email %></td>
                        <td class="font-OpenSans font-normal border"><%= data[index].phone_number %></td>
                        <td class="font-OpenSans font-normal border"><%= data[index].gender %></td>
                        <td class="font-OpenSans font-normal border"><%= data[index].street_address %></td>
                    </tr>
                <% } %>
            </tbody>
        </table> 
    </div>
</body>
</html>